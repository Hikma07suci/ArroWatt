#include "CytronMotorDriver.h"
//Variable declaration and pin assignation
CytronMD motor1(PWM_DIR, 13, 43);
CytronMD motor2(PWM_DIR, 12, 47);
CytronMD motor3(PWM_DIR, 11, 51);
CytronMD motor4(PWM_DIR, 10, 53);
int joyX=A0;
int joyY=A1;
int xValue;
int yValue;

void setup() 
{
  Serial.begin(9600);
}
void loop() 
{
  xValue = analogRead(joyX);
  yValue = analogRead(joyY);
  
  Serial.print(xValue);
  Serial.print("\t");
  Serial.println(yValue);
   
  if((xValue==1023) && (yValue==512))
  {
    maju();
  }
  else if ((xValue==0) && (yValue==512))
  {
    mundur();
  }
  else if ((xValue==512) && (yValue==1023))
  {
    kanan();
  }
  else if ((xValue==512) && (yValue==0))
  {
    kiri();
  }
  else if ((xValue==1023) && (yValue==1023))
  {
    kananAtas();
  }
  else if ((xValue==1023) && (yValue==0))
  {
    kananBawah();
  }
  else if ((xValue==0) && (yValue==0))
  {
    kiriBawah();
  }
  else if ((xValue==0) && (yValue==1023))
  {
    kiriAtas();
  }
  else
  {
    Stop();
  }
}

/////// Motor Driver ///////
Void maju()
{
  motor1.setSpeed(128);
  motor2.setSpeed(-128);
  motor3.setSpeed(-128);
  motor4.setSpeed(128);
  Serial.print("maju");
  delay(500);
}
Void mundur()
{
  motor1.setSpeed(-128);
  motor2.setSpeed(128);
  motor3.setSpeed(128);
  motor4.setSpeed(-128);
  Serial.print("mundur");
  delay(500);
}
Void kanan()
{
  motor1.setSpeed(128);
  motor2.setSpeed(128);
  motor3.setSpeed(128);
  motor4.setSpeed(128);
  Serial.print("kanan");
  delay(500);
}
Void mundur()
{
  motor1.setSpeed(-128);
  motor2.setSpeed(-128);
  motor3.setSpeed(-128);
  motor4.setSpeed(-128);
  Serial.print("kiri");
  delay(500);
}
Void kananAtas()
{
  motor1.setSpeed(128);
  motor2.setSpeed(0);
  motor3.setSpeed(0);
  motor4.setSpeed(128);
  Serial.print("kananAtas");
  delay(500);
}
Void kananBawah()
{
  motor1.setSpeed(0);
  motor2.setSpeed(128);
  motor3.setSpeed(128);
  motor4.setSpeed(0);
  Serial.print("kananBawah");
  delay(500);
}
Void kiriBawah()
{
  motor1.setSpeed(-128);
  motor2.setSpeed(0);
  motor3.setSpeed(0);
  motor4.setSpeed(-128);
  Serial.print("kananAtas");
  delay(500);
}
Void kiriAtas()
{
  motor1.setSpeed(0);
  motor2.setSpeed(-128);
  motor3.setSpeed(-128);
  motor4.setSpeed(0);
  Serial.print("kananBawah");
  delay(500);
}
